{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "DEV": false
  },
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "no-cond-assign": ["error", "except-parens"],
    "no-param-reassign": [
      "error", { "props": false }
    ]
  },
  "extends": "airbnb-base"
}
